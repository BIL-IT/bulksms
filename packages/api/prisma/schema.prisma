generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String @id
  username   String @unique
  email      String @unique
  hash       String
  department String @default("")
  role       Role   @default(USER)
}

enum Role {
  ADMIN
  USER
}

model Sms {
  id         String   @id
  time       DateTime @default(now())
  sender     String   @default("System")
  branchCode String   @default("")
  partyCode  String   @default("")
  phone      String
  content    String
  status     String?
}

model DemoSms {
  id         String   @id
  time       DateTime @default(now())
  sender     String   @default("System")
  branchCode String   @default("")
  partyCode  String   @default("")
  phone      String
  content    String
  status     String?
}

model Cron {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  to        String
  message   String
}
